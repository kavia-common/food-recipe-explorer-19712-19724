#!/usr/bin/env bash
# Stub gradlew script for CI environments that invoke Gradle before Expo prebuild generates native projects.
# This does NOT perform a real native build. It only prevents CI from failing.
# For real builds, run: npm run prebuild:android then use the generated android/ gradlew.

echo "[CI NOTICE] Stub gradlew executed. Native build is skipped in this environment."
echo "[CI NOTICE] To perform a real build locally: 'npm run prebuild:android' and then build via Android Studio or EAS."

# Accept common tasks and exit 0 to satisfy pipelines.
# You can optionally warn if a specific task is requested.
if [[ -n "$1" ]]; then
  echo "[CI NOTICE] Requested Gradle task: $1 (ignored by stub)"
fi

exit 0
